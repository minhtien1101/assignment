<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>controller.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SingUpController</servlet-name>
        <servlet-class>controller.SingUpController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HomeController</servlet-name>
        <servlet-class>controller.HomeController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InsertController</servlet-name>
        <servlet-class>controller.InsertInvoiceController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ReportOwedController</servlet-name>
        <servlet-class>controller.ReportOwedController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DepotController</servlet-name>
        <servlet-class>controller.WarehouseController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InsertBuyerController</servlet-name>
        <servlet-class>controller.InsertBuyerController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InsertProductController</servlet-name>
        <servlet-class>controller.InsertProductController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InsertDimensionController</servlet-name>
        <servlet-class>controller.InsertDimensionController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InsertAgencyController</servlet-name>
        <servlet-class>controller.InsertAgencyController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteInvoiceController</servlet-name>
        <servlet-class>controller.DeleteInvoiceController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateInvoiceController</servlet-name>
        <servlet-class>controller.UpdateInvoiceController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateOwedInvoiceController</servlet-name>
        <servlet-class>controller.UpdateOwedInvoiceController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SingUpController</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HomeController</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InsertController</servlet-name>
        <url-pattern>/insert</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ReportOwedController</servlet-name>
        <url-pattern>/owed</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DepotController</servlet-name>
        <url-pattern>/warehouse</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InsertBuyerController</servlet-name>
        <url-pattern>/buyer/insert</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InsertProductController</servlet-name>
        <url-pattern>/product/insert</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InsertDimensionController</servlet-name>
        <url-pattern>/dimension/insert</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InsertAgencyController</servlet-name>
        <url-pattern>/agency/insert</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteInvoiceController</servlet-name>
        <url-pattern>/delete</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateInvoiceController</servlet-name>
        <url-pattern>/update</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateOwedInvoiceController</servlet-name>
        <url-pattern>/updateowedinvoice</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
